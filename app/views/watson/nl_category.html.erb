<% provide(:title, "category") %>
<h1>N.L.U. Categories</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:natural, url: nl_category_path) do |f| %>

      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>Check the result of this URL? <%= link_to "submit", nl_category_path %></p>
  </div>
</div>